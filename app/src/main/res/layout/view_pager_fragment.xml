<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.newapppp.ui.typeofhabits.ViewPagerFilterFragment"
    android:orientation="vertical">
<!--    Почему при смене на LinearLayout всё начало отображаться-->
<!--    корректно, интересна именно логика отображения, что в -->
<!--    начале, что потом и т.д-->

    <!--    ??нормально ли, что 2 апбара?-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/view_pager_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.NewApppp.AppBarOverlay">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_choose_habit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>